<% title "Login" %>

<%= simple_form_for(resource, :url => user_session_path, :html => { class: 'form-horizontal' }) do |f| %>
  <%= f.input :email, label: "Email", autofocus: true %>
  <%= f.input :password, label: "Senha" %>
  
  <%= form_controls do %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= submit_button :primary, "Entrar" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
